<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <% if cart.count == 0 %>
    <h2>Darn, nothing is in your cart yet.</h2>
    <p>Check out our swag, find something you like</p>
    <p><%= link_to 'Products', [:products], class: 'btn btn-info' %></p>
  <% else %>
    <%= render 'cart' %>
  <% end %>

</section>